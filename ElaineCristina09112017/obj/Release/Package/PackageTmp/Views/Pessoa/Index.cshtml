@model IEnumerable<ElaineCristina09112017.Pessoa>


<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Pessoas</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Cadastrar Pessoa", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.STRNOME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STRCPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTNASCIMENTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTCADASTRO)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.STRNOME)
        </td>
        <td id="tdCPF">
            @Html.DisplayFor(modelItem => item.STRCPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DTNASCIMENTO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DTCADASTRO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDPESSOA }) |
            @Html.ActionLink("Visualizar", "Details", new { id=item.IDPESSOA }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.IDPESSOA })
        </td>
    </tr>
}
    
</table>

<script>
    $(document).ready(function () {

        $("#tdCPF").mask('000.000.000-00');
    });
</script>