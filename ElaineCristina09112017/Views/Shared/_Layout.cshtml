<html>
<head>
    <link rel="stylesheet" href="~/Content/Css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Css/Site.css" />
    <script src="~/Content/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.mask.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Colab World</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">                        
                        <li class="nav-item active">@Html.ActionLink("Empresas", "Index", "Empresa", new { id = 1 }, new { @class = "nav-link" })</li>
                        <li class="nav-item active">@Html.ActionLink("Pessoas", "Index", "Pessoa", new { id = 1 }, new { @class = "nav-link" })</li>
                        <li class="nav-item active">@Html.ActionLink("Colaboradores", "Index", "Colaborador", new { id = 1 }, new { @class = "nav-link" })</li>
                        <li class="nav-item active">@Html.ActionLink("Sair", "Index", "Home", new { id = 1 }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </nav>
        </div>
        <div id="conteudo"><br />
            @RenderBody()
        </div>
    </div>

    
</body>
</html>